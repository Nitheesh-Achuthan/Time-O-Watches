<%-include('../include/user-header')%>


    <main>

        <hr style="width: 80%;">        
        <div class="product_image_area">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <!-- <div class="product_img_slide owl-carousel"> -->
                        <div class="single_product_img" id="img-container">
                            <img src="../<%= watches.image %>" id="imaage" alt="#" class="img-fluid">
                        </div>

                      
                    </div>
                    <div class="col-lg-6">
                        <div class=" single_product_text text-center">
                            <h3>Product Details</h3>


                            <p>
                                <%= watches.description %>
                            </p>
                            <div class="card_area">
                                <div class="product_count_area">
                                   
                                    <span style="font-size: 1.5rem;">Rs.<%= parseInt(offer[0]?.offerPrice)%></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <span><del style="color: rgb(152, 147, 147);">Rs.<%= watches.price %></del></span>
                                </div>
                                    <% if(watches.quantity < 1) { %>
                                        <h4 style="color: red;padding-top: 2rem;">Out of Stock</h4>
                                        <!-- <p><h4>Rs.<%= watches.price %></h4></p> -->
                                        
                                        <div class="add_to_cart" style="margin-top: 18px;">
                                            <button type="submit" disabled onclick="addCart('<%= watches._id %>')" class="btn_3">add to cart</button>
                                            <a href=""><button disabled type="button" class="btn_3">Buy Now</button></a>

                                        </div>
                                        <% } else { %>
                                            <div class="add_to_cart" style="margin-top: 18px;">
                                                <button type="submit" onclick="addCart('<%= watches._id %>')" class="btn_3">add to cart</button>
                                                <a href="/buy-now?id=<%=watches._id%>"><button type="button" class="btn_3">Buy Now</button></a>

                                            </div>
                                            <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--================End Single Product Area =================-->
        <hr style="padding: top 0%; width:85%">

    </main>


    <!--image zoom---------------------------------------------------------------------------------------->
    <script>
        var options = {
            width: 400,
            height: 400,
            zoomWidth: 150,
            scale: .5,
            offset: { vertical: 0, horizontal: 0 },

        };
        new ImageZoom(document.getElementById("img-container"), options);

    </script>

    <!-- add cart=======================================================================-->


    <script>
        function addCart(proId) {
            $.ajax({


                url: `/add-to-cart/${proId}`,
                method: 'post',
                success: (res) => {


                    if (res.status) {
                        let count = $('#cart-count').html()
                        count = parseInt(count) + 1
                        $('#cart-count').html(count)
                    }

                    Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Your product is added to cart',
                        showConfirmButton: false,
                        timer: 1500
                    })

                }

            })


            // return true or false, depending on whether you want to allow the `href` property to follow through or not
        }
    </script>



   

