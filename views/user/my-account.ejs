<%-include('../include/user-header')%>

    <div class="container">
        <div class="main-body">         
        
              <!-- Breadcrumb -->
              <form action="/profile-edit" method="post">
              <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                 
                  <li class="breadcrumb-item active" aria-current="page">Your Account</li>
                </ol>
              </nav>
              <!-- /Breadcrumb -->
              
        
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <p class="text-secondary mb-1" style="padding-right: 7rem;text-align: left;">Hello,</p>
                            <h4><%= user.firstName+' '+user.lastName%></h4>
                            
                          <hr>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- </div> -->
                </div>
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">First Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input type="text" value="<%= user.firstName%>" name="fname" style="border-width:0px;border:none;outline:none;">
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Last Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input type="text" value="<%= user.lastName%>" name="lname" style="border-width:0px;border:none;outline:none;">
                        </div>
                      </div>
                      
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input type="text" value="<%= user.email%>" name="email" style="border-width:0px;border:none;outline:none;">
                            <!-- <%= user.email%> -->
                        </div>
                      </div>
                      <hr>
                      
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Mobile</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <input type="text" value="<%= user.mobile%>" name="mobile" style="border-width:0px;border:none;outline:none;">
                        </div>
                      </div>
                      <hr>
                     
                      <div class="row">
                        <div class="col-sm-12">
                          <a class="edit-pwd" style="color: rgb(21, 5, 198);" href="/change-pwd">Change Password &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &gt;</a>
                          <!-- <a class="btn btn-info " target="__blank" href="https://www.bootdey.com/snippets/view/profile-edit-data-and-skills">Edit</a> -->
                          <button class="btn-edit" type="submit">Save</button>
                        </div>
                      </div>
                    </div>
                  </div>
    
                  
    
                
                </div>
              </div>
            </form>
    
            </div>
        </div>

    
    
    
    
    
        <hr style="border-top: 1px dashed rgb(29, 22, 22);width: 80%; margin: 3rem auto;">
        

    <!-- JS here -->

    <script src="./assets/js/vendor/modernizr-3.5.0.min.js"></script>
    <!-- Jquery, Popper, Bootstrap -->
